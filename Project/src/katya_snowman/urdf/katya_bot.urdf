<?xml version="1.0"?>
<robot name="snowman_bot">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="orange">
    <color rgba="255 165 0 1"/>
  </material>

  <link name="base_link">
   <visual>
      <geometry>
        <cylinder length="0.05" radius="0.5"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.025"/>
      <material name="blue"/>
    </visual>
  </link>
  <link name="second_round">
    <visual>
      <geometry>
        <sphere radius="0.25"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.25"/>
      <material name="white"/>
    </visual>
  </link>

<joint name = "joint2" type="fixed">
<parent link="base_link"/>
<child link="second_round"/>
<origin xyz="0 0 0"/>
</joint>

  <link name="third_round">
    <visual>
      <geometry>
        <sphere radius="0.17"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.17"/>
      <material name="white"/>
    </visual>
  </link>

<joint name = "joint3" type="fixed">
<parent link="second_round"/>
<child link="third_round"/>
<origin xyz="0 0 0.49"/>
</joint>

  <link name="forth_round">
    <visual>
      <geometry>
        <sphere radius="0.13"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.13"/>
      <material name="white"/>
    </visual>
  </link>

<joint name = "joint4" type="fixed">
<parent link="third_round"/>
<child link="forth_round"/>
<origin xyz="0 0 0.27"/>
</joint>

  <link name="bin">
    <visual>
      <geometry>
        <cylinder length = "0.17" radius="0.07"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.05"/>
      <material name="black"/>
    </visual>
  </link>

<joint name = "joint5" type="fixed">
<parent link="forth_round"/>
<child link="bin"/>
<origin xyz="0 0 0.25"/>
</joint>

  <link name="food">
    <visual>
      <geometry>
        <cylinder length = "0.13" radius="0.017"/>
      </geometry>
	<origin rpy="0 1.57075 1.57075" xyz="0 0 0.05"/>
      <material name="orange"/>
    </visual>
  </link>

<joint name = "joint6" type="fixed">
<parent link="bin"/>
<child link="food"/>
<origin xyz="0 -0.17 -0.16"/>
</joint>


<link name="left_hand">
    <visual>
      <geometry>
        <cylinder length = "0.3" radius="0.017"/>
      </geometry>
	<origin rpy="0 1.57075 0" xyz="0 0 0.017"/>
      <material name="orange"/>
    </visual>
  </link>

<joint name = "joint7" type="fixed">
<parent link="third_round"/>
<child link="left_hand"/>
<origin xyz="-0.2 0 0.17"/>
</joint>

<link name="right_hand">
    <visual>
      <geometry>
        <cylinder length = "0.3" radius="0.017"/>
      </geometry>
	<origin rpy="1.57075 0 1.57075" xyz="0 0 0.017"/>
      <material name="orange"/>
    </visual>
  </link>

<joint name = "joint8" type="fixed">
<parent link="third_round"/>
<child link="right_hand"/>
<origin xyz="0.2 0 0.17"/>
</joint>


<link name="left_hand2">
    <visual>
      <geometry>
        <cylinder length = "0.3" radius="0.017"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.017"/>
      <material name="orange"/>
    </visual>
  </link>

<joint name = "joint9" type="fixed">
<parent link="left_hand"/>
<child link="left_hand2"/>
<origin xyz="-0.14 0 0.133"/>
</joint>

<link name="right_hand2">
    <visual>
      <geometry>
        <cylinder length = "0.3" radius="0.017"/>
      </geometry>
	<origin rpy="0 0 0" xyz="0 0 0.017"/>
      <material name="orange"/>
    </visual>
  </link>

<joint name = "joint10" type="fixed">
<parent link="right_hand"/>
<child link="right_hand2"/>
<axis xyz="0 0 0.3"/>
<origin xyz="0.14 0 0.133"/>
</joint>
</robot>
